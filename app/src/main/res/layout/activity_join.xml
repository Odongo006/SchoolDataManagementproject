<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Register as a school"
            android:id="@+id/tv_register_as_school_id"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/bt_register_as_school_id"
            android:layout_toRightOf="@id/tv_register_as_parent_id"
            android:layout_marginTop="25dp"
            android:background="@color/colorBlue"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Register as a parent"
            android:id="@+id/tv_register_as_parent_id"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            android:layout_below="@id/tv_register_as_school_id"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/bt_register_as_parent"
            android:layout_toRightOf="@id/tv_register_as_parent_id"
            android:layout_marginTop="25dp"
            android:background="@color/colorBlue"
            android:layout_below="@id/bt_register_as_school_id"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Register as a student"
            android:id="@+id/tv_register_as_student_id"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            android:layout_below="@id/tv_register_as_parent_id"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/bt_register_as_student_id"
            android:layout_toRightOf="@id/tv_register_as_parent_id"
            android:layout_marginTop="25dp"
            android:background="@color/colorBlue"
            android:layout_below="@id/bt_register_as_parent"/>

    </RelativeLayout>
    




</RelativeLayout>