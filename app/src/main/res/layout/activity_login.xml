<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical">



      <ImageView
          android:layout_width="200dp"
          android:layout_height="200dp"
          android:layout_centerHorizontal="true"
          android:id="@+id/iv_mLogo_id"
          android:src="@drawable/mlogo"
          android:layout_marginTop="100dp"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="LOGIN"
          android:textColor="#000000"
          android:textSize="25dp"
          android:textStyle="bold"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/iv_mLogo_id"
          android:layout_marginTop="20dp"
          android:id="@+id/tv_login_text_id"
          />

      <EditText
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:hint="Username"
          android:textColor="#000000"
          android:layout_marginStart="50dp"
          android:layout_below="@id/tv_login_text_id"
          android:layout_marginTop="25dp"
          android:id="@+id/et_user_name_login_activity_id"
          />

      <EditText
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:hint="Password"
          android:textColor="#000000"
          android:layout_marginStart="50dp"
          android:layout_below="@id/et_user_name_login_activity_id"
          android:layout_marginTop="5dp"
          android:id="@+id/et_password_login_activity_id"
          />

      <CheckBox
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="50dp"
          android:layout_below="@id/et_password_login_activity_id"
          android:layout_marginTop="5dp"
          android:id="@+id/cb_remember_me_id"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Remember me"
          android:id="@+id/tv_remember_id"
          android:textColor="#000000"
          android:layout_toRightOf="@id/cb_remember_me_id"
          android:layout_marginTop="10dp"
          android:layout_marginStart="15dp"
          android:layout_below="@id/et_password_login_activity_id"
          />

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="LOGIN"
          android:background="@drawable/button_border"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/tv_remember_id"
          android:layout_marginTop="25dp"
          android:id="@+id/bt_login_2_id"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Forgot password?"
          android:textColor="#000000"
          android:layout_toRightOf="@id/tv_remember_id"
          android:layout_marginStart="50dp"
          android:layout_marginTop="10dp"
          android:layout_below="@id/et_password_login_activity_id"/>





</RelativeLayout>