<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CREATE ACCOUNT"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:id="@+id/tv_create_account_id"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="75dp"
                        android:src="@drawable/mprofile_image"
                        android:id="@+id/iv_mProfile_id"/>

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="choose image"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_border"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/iv_mProfile_id"
                        android:layout_marginTop="45dp"
                        android:id="@+id/bt_choose_image_id"
                        />
                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:layout_below="@id/bt_choose_image_id"
                        android:layout_marginTop="45dp"
                        android:layout_marginStart="10dp"
                        android:paddingRight="115dp"
                        android:textColor="#000000"
                        android:id="@+id/et_name_id"
                        android:background="@drawable/edit_text_border"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingStart="15dp"
                        android:layout_centerHorizontal="true"
                        android:inputType="text"


                        />
                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:hint="Surname"
                        android:id="@+id/et_surname_id"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/et_name_id"
                        android:paddingRight="90dp"
                        android:background="@drawable/edit_text_border"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingStart="15dp"
                        android:layout_centerHorizontal="true"
                        android:inputType="text"/>

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:hint="Name of the School"
                        android:id="@+id/et_school_id"
                        android:layout_marginStart="10dp"
                        android:paddingRight="90dp"
                       android:layout_below="@id/et_surname_id"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text_border"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingStart="15dp"
                        android:layout_centerHorizontal="true"
                        android:inputType="text"
                        />

                        />
                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:hint="School Code"
                        android:id="@+id/et_school_code_id"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/et_school_id"
                        android:paddingRight="100dp"
                        android:background="@drawable/edit_text_border"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingStart="15dp"
                        android:layout_centerHorizontal="true"
                        android:inputType="number"/>

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:hint="Students Admission number"
                        android:id="@+id/et_students_admission_number_id"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/et_school_code_id"
                        android:background="@drawable/edit_text_border"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingStart="15dp"
                        android:layout_centerHorizontal="true"
                        android:inputType="number"/>

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:hint="User Name"
                        android:id="@+id/et_user_name_id"
                        android:layout_marginStart="10dp"
                        android:paddingRight="90dp"
                        android:layout_below="@id/et_students_admission_number_id"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text_border"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingStart="15dp"
                        android:layout_centerHorizontal="true"
                        android:inputType="text"/>

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:hint="password"
                        android:id="@+id/et_password_id"
                        android:layout_marginStart="10dp"
                        android:paddingRight="90dp"
                        android:layout_below="@id/et_user_name_id"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text_border"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingStart="15dp"
                        android:layout_centerHorizontal="true"
                        android:inputType="textPassword"
                        />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:hint="Confirm Password"
                        android:id="@+id/et_confirm_password_id"
                        android:layout_marginStart="10dp"
                        android:paddingRight="90dp"
                        android:layout_below="@id/et_password_id"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text_border"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingStart="15dp"
                        android:layout_centerHorizontal="true"
                        android:inputType="textPassword"
                        />

                    <CheckBox
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/cb_terms_and_conditions_id"
                        android:layout_below="@id/et_confirm_password_id"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="25dp"/>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="I agree to terms of services and privacy policy"
                        android:textColor="#000000"
                        android:layout_toRightOf="@id/cb_terms_and_conditions_id"
                        android:layout_marginStart="5dp"
                        android:layout_below="@id/et_confirm_password_id"
                        android:layout_marginTop="25dp"
                        android:id="@+id/tv_terms_and_condition_id"/>

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="Sign up"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_border"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/cb_terms_and_conditions_id"
                        android:layout_marginTop="25dp"
                        android:id="@+id/bt_sign_up_id"
                        />
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="Already have an account?"
                        android:layout_marginTop="25dp"
                        android:textColor="#000000"
                        android:layout_below="@id/bt_sign_up_id"
                        android:id="@+id/tv_already_have_an_account_id"
                        android:layout_marginStart="50dp"/>

                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arlready have an account? "
                        android:layout_marginTop="25dp"
                        android:textColor="#000000"
                        android:layout_below="@id/tv_already_have_an_account_id"
                        android:id="@+id/tv_login_id"
                        android:layout_marginStart="50dp"/>

                    <Button
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/bt_login_1_id"
                        android:layout_toRightOf="@id/tv_login_id"
                        android:layout_below="@id/tv_already_have_an_account_id"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/button_border"
                        android:layout_marginStart="10dp"
                        />



                </RelativeLayout>

            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>